{
	"name": "oparl/oparl-server",
	"description": "A PHP reference implementation of an OParl server.",
	"keywords": ["oparl", "server", "api", "json", "reference"],
	"license": "MIT",
	"type": "project",
	"require": {
      "laravel/framework": "5.0.*",
      "mpdf/mpdf": "6.0.*",
      "fzaninotto/faker": "dev-master",
      "doctrine/dbal": "2.5.*",
      "predis/predis": "~1.0",
      "fguillot/picofeed": "0.1.*",
      "phpdocumentor/reflection-docblock": "^2.0",
      "efrane/transfugio": "^0.5"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/",
			"OParl\\": "database/model/",
            "OParl\\Fakers\\": "database/fakers/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
            "npm update",
            "bower update --allow-root",
            "gulp --production"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
